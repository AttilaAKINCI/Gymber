<resources>
    <style name="Theme.Gymber" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Theme.Gymber.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/window_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_transparent</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.Gymber</item>
    </style>
</resources>
